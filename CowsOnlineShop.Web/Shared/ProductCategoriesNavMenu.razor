@inherits ProductCategoriesNavMenuBase

@if(ProductBreedDtos == null && ErrorMessage == null)
    {
    <DisplaySpinner/>
}
else if(ErrorMessage != null)
{
    <DisplayError ErrorMessage = "@ErrorMessage"/>
}
else
{
    @foreach(var productBreed in ProductBreedDtos)
        {
            var link = "/ProductsByCategory/" + productBreed.Id;

        <div class = "nav-item px-3">
            <NavLink class="nav-link" href="@link">
                <Icon Name="IconName.CaretRight" /> &nbsp;@productBreed.Name
            </NavLink>
        </div>
    }
}